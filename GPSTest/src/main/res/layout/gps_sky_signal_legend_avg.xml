<!-- C/N0 legend title and units-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sky_legend_cn0_avg_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:minWidth="62dp">

    <TextView
        android:id="@+id/sky_legend_cn0_avg_in_view_title"
        style="@style/sky_legend_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="5dp"
        android:text="@string/sky_legend_cn0_avg_in_view_title" />
    <ImageView
        android:id="@+id/cn0_legend_indicator_in_view"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="5dp"
        android:layout_toRightOf="@+id/sky_legend_cn0_avg_in_view_title"
        android:layout_toEndOf="@+id/sky_legend_cn0_avg_in_view_title"
        app:srcCompat="@drawable/ic_cn0_indicator_in_view" />
    <TextView
        android:id="@+id/sky_legend_cn0_avg_in_view_value"
        style="@style/sky_legend_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/cn0_legend_indicator_in_view"
        android:layout_alignBottom="@id/sky_legend_cn0_avg_in_view_title"
        android:text="35.67"/>

    <TextView
        android:id="@+id/sky_legend_cn0_avg_used_title"
        style="@style/sky_legend_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sky_legend_cn0_avg_in_view_title"
        android:layout_alignRight="@id/sky_legend_cn0_avg_in_view_title"
        android:text="@string/sky_legend_cn0_avg_used_title" />
    <ImageView
        android:id="@+id/cn0_legend_indicator_used"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="5dp"
        android:layout_below="@id/cn0_legend_indicator_in_view"
        android:layout_toRightOf="@+id/sky_legend_cn0_avg_in_view_title"
        android:layout_toEndOf="@+id/sky_legend_cn0_avg_in_view_title"
        app:srcCompat="@drawable/ic_cn0_indicator_used" />
    <TextView
        android:id="@+id/sky_legend_cn0_avg_used_value"
        style="@style/sky_legend_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sky_legend_cn0_avg_in_view_value"
        android:layout_toRightOf="@id/cn0_legend_indicator_used"
        android:layout_alignBottom="@id/sky_legend_cn0_avg_used_title"
        android:text="15.24"/>
</RelativeLayout>